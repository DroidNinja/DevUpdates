<resources>

    <!-- Base application theme. -->

    <style name="TextAppearance.H1" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/arimo_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="fontFamily">@font/arimo_bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.H2" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/arimo_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="fontFamily">@font/arimo_bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.H3" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/arimo</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/arimo</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.H2.Subtitle" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/arimo</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="fontFamily">@font/arimo</item>
    </style>

    <style name="AppTheme.AlertDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.MaterialComponents.Title.Text</item>
    </style>

    <style name="AppTheme.RadioButtonStyle" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="useMaterialThemeColors">false</item>
    </style>

    <style name="AppTheme.CheckboxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="useMaterialThemeColors">false</item>
    </style>

    <style name="AppTheme.SwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="useMaterialThemeColors">false</item>
        <item name="colorControlActivated">#6cc078</item>
        <item name="colorSwitchThumbNormal">#a7a7a7</item>
        <item name="android:colorForeground">#e0e0e0</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ActionModeStyle" parent="Widget.AppCompat.ActionMode">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="SnackbarStyle" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:background">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.AppTheme.Tabs" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.IOSched.Tab</item>
        <item name="tabIndicator">?attr/colorOnSecondary</item>
    </style>

    <style name="TextAppearance.IOSched.Tab" parent="@style/TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/arimo_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="colorOnPrimarySurface">@color/colorOnPrimary</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorSurface">@color/colorSurface</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.H2</item>


        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>


        <item name="colorControlActivated">@color/colorPrimary</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!--Default Swipe fling style-->
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="snackbarStyle">@style/SnackbarStyle</item>
        <item name="materialAlertDialogTheme">@style/AppTheme.AlertDialogStyle</item>
        <item name="radioButtonStyle">@style/AppTheme.RadioButtonStyle</item>
        <item name="checkboxStyle">@style/AppTheme.CheckboxStyle</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow</item>
        <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="switchStyle">@style/AppTheme.SwitchStyle</item>
    </style>

</resources>
